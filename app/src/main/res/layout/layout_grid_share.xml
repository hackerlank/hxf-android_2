<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_bg">

    <LinearLayout
        android:id="@+id/layout_grid_share_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_grid_share_iv"
            android:layout_width="@dimen/px_106"
            android:layout_height="@dimen/px_106"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_20"
            android:src="@mipmap/ico_share_qq" />

        <TextView
            android:id="@+id/layout_grid_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_10"
            android:text="qq"
            android:textColor="@color/black_333_text"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/px_20" />
    </LinearLayout>
    <View
        android:id="@+id/layout_grid_share_v"
        android:layout_width="4px"
        android:background="@color/d_line"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_68"
        android:layout_alignTop="@+id/layout_grid_share_ll"
        android:layout_height="@dimen/px_10"/>
</RelativeLayout>