<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_80"
    android:background="@drawable/selector_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/layout_list_report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20" />

    <ImageView
        android:id="@+id/layout_list_report_iv"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_30"
        android:padding="@dimen/px_3"
        android:src="@mipmap/ico_photo_check"
        android:layout_width="@dimen/px_50"
        android:visibility="gone"
        android:layout_height="@dimen/px_50" />

</RelativeLayout>