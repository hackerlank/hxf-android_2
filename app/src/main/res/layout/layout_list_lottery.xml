<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_bg"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20">

        <ImageView
            android:id="@+id/layout_list_lottery_iv_coupon"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_64" />

        <TextView
            android:id="@+id/layout_list_lottery_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_list_lottery_iv_coupon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_5"
            android:textColor="@color/gray_666_text"
            android:textSize="11sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/layout_list_lottery_tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/px_20"
        android:background="@drawable/shape_for_join_to_list"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="@dimen/px_5"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:paddingTop="@dimen/px_5"
        android:text="加入清单"
        android:textColor="@color/white"
        android:textSize="12sp" />
    <View
        android:id="@+id/layout_list_lottery_v_add"
        android:layout_alignLeft="@+id/layout_list_lottery_tv_add"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/px_100"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_160"
        android:layout_marginTop="@dimen/px_15"
        android:layout_toLeftOf="@+id/layout_list_lottery_tv_add"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_list_lottery_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸福券1000张"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_process"
                android:textColor="@color/gray_666_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/layout_list_lottery_tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:text="98%"
                android:textColor="@color/advert_blue_text"
                android:textSize="12sp" />
        </LinearLayout>


        <com.goodhappiness.widget.PercentageBar
            android:id="@+id/layout_list_lottery_pb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_15"
            android:layout_marginTop="@dimen/px_5"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layout_list_lottery_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总需1555人"
                android:textColor="@color/gray_666_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/layout_list_lottery_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="31"
                android:textColor="@color/advert_blue_text"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/layout_list_lottery_remain"
                android:text="剩余"
                android:textColor="@color/gray_666_text"
                android:textSize="11sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_15" />
    </LinearLayout>

</RelativeLayout>