<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_list_exchange_record_iv"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_20"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/layout_list_revelation_ll_revealed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginTop="@dimen/px_20"
            android:layout_toRightOf="@+id/layout_list_exchange_record_iv">

            <TextView
                android:id="@+id/layout_list_exchange_record_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/px_65"
                android:text="商品名称"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_333_text"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/layout_list_exchange_record_iv_share"
                android:src="@mipmap/share"
                android:padding="@dimen/px_10"
                android:layout_marginRight="@dimen/px_15"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_price"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_exchange_record_tv_happy_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:text="1029"
                    android:textColor="@color/join_red"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_coin"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_exchange_record_tv_general_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1029"
                    android:textColor="@color/join_red"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_coin"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_time_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_exchange_record_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-07 15:19"
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_10"
        android:background="@color/d_line" />

    <RelativeLayout
        android:id="@+id/layout_exchange_record_rl_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70">

        <TextView
            android:id="@+id/layout_exchange_record_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/shape_for_theme_btn"
            android:paddingBottom="@dimen/px_5"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:paddingTop="@dimen/px_5"
            android:text="@string/confirm_address"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>