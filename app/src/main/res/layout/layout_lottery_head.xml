<?xml version="1.0" encoding="utf-8"?>
<com.goodhappiness.widget.DisPatchLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/lottery_sl"
        android:background="@color/white"
        app:indicator_drawable_selected="@mipmap/bg_banner_click"
        app:indicator_drawable_unselected="@mipmap/bg_banner"
        app:indicator_height="5dp"
        app:indicator_width="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300"/>

    <LinearLayout
        android:id="@+id/layout_lottery_head_ll_adv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/e_bg"
        android:orientation="horizontal"
        android:padding="@dimen/px_15">

        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_10"
            android:src="@mipmap/ico_scroll_broadcast" />

        <com.goodhappiness.widget.UpMarqueeTextView
            android:id="@+id/layout_lottery_head_umt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_10" />
