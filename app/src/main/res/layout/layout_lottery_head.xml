    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lottery_head_ll_tab"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/layout_lottery_head_rl_process"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/layout_lottery_head_tv_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black_333_text"
                android:text="@string/progress" />

            <View
                android:id="@+id/layout_lottery_head_v_process"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_lottery_head_rl_request"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/layout_lottery_head_tv_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/gray_999_text"
                android:text="@string/all_need" />

            <ImageView
                android:id="@+id/layout_lottery_head_iv_request"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_3"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/layout_lottery_head_tv_request"
                android:src="@mipmap/ico_btn_nav" />

            <View
                android:id="@+id/layout_lottery_head_v_request"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</com.goodhappiness.widget.DisPatchLinearLayout>