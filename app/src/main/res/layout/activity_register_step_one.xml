<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_80"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/shape_for_black">
            <com.goodhappiness.widget.ClearEditText
                android:layout_marginTop="@dimen/px_5"
                android:layout_marginBottom="@dimen/px_5"
                android:id="@+id/register_one_cet"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColorHint="@color/gray_999_text"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/px_15"
                android:hint="@string/please_input_phone_num"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_piv_get"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_30"
            android:orientation="horizontal">

            <com.goodhappiness.widget.ClearEditText
                android:id="@+id/register_sn_code_pic"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/px_20"
                android:layout_height="@dimen/px_90"
                android:layout_weight="1"
                android:background="@mipmap/bg_kk1"
                android:gravity="center|left"
                android:hint="@string/mac"
                android:paddingLeft="@dimen/px_20"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_get_mac"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:layout_marginLeft="@dimen/px_16"
                android:background="@color/white"
                android:layout_weight="2"
                android:src="@mipmap/loading_default"
                android:gravity="center"
                android:text="@string/get_mac"
                android:textColor="@color/black_333_text" />
        </LinearLayout>
        <TextView
            android:id="@+id/register_one_tv_get"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:gravity="center"
            android:text="@string/get_mac"
            android:background="@drawable/shape_for_theme_btn"/>
        <LinearLayout
            android:id="@+id/register_one_ll"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/register_one_iv_protocol"
                android:src="@mipmap/ico_ye_choose"
                android:padding="@dimen/px_10"
                android:layout_width="@dimen/px_63"
                android:layout_height="@dimen/px_51" />
            <TextView
                android:id="@+id/register_one_tv_protocol"
                android:layout_marginTop="@dimen/px_10"
                android:textColor="@color/advert_blue_text"
                android:text="@string/protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
