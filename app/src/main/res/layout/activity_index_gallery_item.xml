<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_120"
    android:layout_height="@dimen/px_120" >

    <ImageView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="@dimen/px_110"
        android:layout_height="@dimen/px_110"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/px_5"
        android:src="@mipmap/loading_default"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/id_index_gallery_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_20"
        android:textColor="@color/white"
        android:text="some info"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textSize="13sp" />

</RelativeLayout>