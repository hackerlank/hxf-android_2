<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_50"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_list_win_record_iv"
                android:layout_width="@dimen/px_187"
                android:layout_height="@dimen/px_136"
                android:src="@mipmap/img_mrjz" />

            <TextView
                android:id="@+id/layout_list_win_record_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_12"
                android:text="500张"
                android:textColor="@color/gray_666_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20">

                <TextView
                    android:id="@+id/layout_list_win_record_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="幸福商城兑换券 1000张" />

                <ImageView
                    android:id="@+id/layout_list_win_record_iv_share"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_15"
                    android:padding="@dimen/px_10"
                    android:src="@mipmap/share" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_win_record_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_need_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_win_record_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lucky_code_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_win_record_win_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/join_red"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_join_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_win_record_tv_join_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_13"
                android:layout_marginTop="@dimen/px_13"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reveal_time_"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/layout_list_win_record_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/ll_detail"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/d_line"/>
        <ImageView
            android:id="@+id/buy_goods"
            android:layout_marginRight="@dimen/px_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/buy_goods"
            android:layout_width="@dimen/px_162"
            android:layout_height="@dimen/px_40" />
    </RelativeLayout>
</RelativeLayout>