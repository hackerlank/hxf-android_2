<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar2" />

    <ImageView
        android:layout_marginTop="@dimen/px_218"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        android:layout_width="@dimen/px_360"
        android:layout_height="@dimen/px_110" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/domain"
        android:layout_marginTop="@dimen/px_350"
        android:textSize="16sp"
        android:textColor="@color/gray_666_text"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/about_version"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/gray_999_text"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginBottom="@dimen/px_20"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:text="@string/company_authority"
            android:textColor="@color/gray_999_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>