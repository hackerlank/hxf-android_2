<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/px_25" >
    <RelativeLayout
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/layout_list_address_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_666_text" />
        <TextView
            android:id="@+id/layout_list_address_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_333_text" />
    </RelativeLayout>
    <TextView
        android:id="@+id/layout_list_address_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:textColor="@color/gray_666_text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_25"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/d_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_5"/>
</LinearLayout>