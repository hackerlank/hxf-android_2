<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:padding="@dimen/px_10"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_list_praise"
        android:layout_width="@dimen/px_1"
        android:layout_height="@dimen/px_1"
        />
    <com.goodhappiness.widget.RoundImageViewByXfermode
        android:id="@+id/layout_list_praise_iv_head"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80"
        android:layout_marginLeft="@dimen/px_15"
        android:layout_centerVertical="true"
        android:src="@mipmap/loading_default"
        app:strokeColor="@color/d_line" />

    <LinearLayout
        android:id="@+id/layout_list_praise_ll_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_100"
        android:layout_marginRight="@dimen/px_140"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_list_fragment_social_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_333_text"
            android:textSize="13sp" />

        <com.goodhappiness.widget.emoji.EmojiTextView
            android:id="@+id/layout_list_fragment_social_tv_summery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            app:emojiSize="18sp"
            android:visibility="gone"
            android:textColor="@color/gray_999_text"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/layout_list_fragment_social_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:textColor="@color/gray_999_text"
            android:textSize="12sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_10">

        <TextView
            android:id="@+id/layout_list_fragment_social_tv_focus"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_for_blue"
            android:gravity="center"
            android:paddingBottom="@dimen/px_5"
            android:paddingTop="@dimen/px_5"
            android:textSize="12sp"
            android:text="+关注"
            android:textColor="@color/white" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/layout_list_fragment_social_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80" />
</RelativeLayout>