<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridView
        android:id="@+id/dialog_share_gv"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:numColumns="4"
        android:listSelector="@android:color/transparent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="@color/theme_color"/>
    <TextView
        android:id="@+id/dialog_share_tv"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/selector_white_bg"
        android:textColor="@color/join_red"
        android:text="@string/cancel"
        android:textSize="15sp"
        android:layout_height="@dimen/px_126" />
</LinearLayout>