<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_60"
    android:background="@color/trans">
    <TextView
        android:id="@+id/layout_list_submit_order_tv_name"
        android:layout_width="wrap_content"
        android:text="幸福商城兑换券 1000张"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/px_20"
        android:textColor="@color/gray_999_text"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/layout_list_submit_order_tv_period"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/layout_list_submit_order_tv_name"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="@color/gray_999_text"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/layout_list_submit_order_tv_count"
            android:layout_width="wrap_content"
            android:text="10"
            android:textSize="12sp"
            android:textColor="@color/join_red"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/people_count"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/px_5"
            android:textColor="@color/gray_999_text"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>