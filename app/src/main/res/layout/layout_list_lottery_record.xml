<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_list_lottery_record_ll_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_36"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_list_lottery_record_iv"
                android:src="@mipmap/img_mrjz"
                android:layout_width="@dimen/px_187"
                android:layout_height="@dimen/px_136" />

            <TextView
                android:id="@+id/layout_list_lottery_record_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_10"
                android:text="1000张"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/gray_666_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:layout_toRightOf="@+id/layout_list_lottery_record_ll_coupon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_list_lottery_record_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸福商城兑换券 1000张"
                android:textColor="@color/black_333_text" />

            <TextView
                android:id="@+id/layout_list_lottery_record_tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:textSize="12sp"
                android:text="期号： 304030178"
                android:textColor="@color/gray_666_text" />
            <LinearLayout
                android:id="@+id/layout_list_lottery_record_ll_lucky_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/lucky_code_"
                    android:textSize="12sp"
                    android:textColor="@color/gray_666_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/layout_list_win_record_win_tv_number"
                    android:textSize="12sp"
                    android:textColor="@color/join_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_list_lottery_record_ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/reveal_time_"
                    android:textSize="12sp"
                    android:textColor="@color/gray_666_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/layout_list_win_record_tv_time"
                    android:text="2016-03-22 22:513:00"
                    android:textSize="12sp"
                    android:textColor="@color/gray_666_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_join_"
                    android:textSize="12sp"
                    android:textColor="@color/gray_666_text" />

                <TextView
                    android:id="@+id/layout_list_lottery_record_tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="2"
                    android:textColor="@color/join_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="人次"
                    android:textColor="@color/gray_666_text" />

                <TextView
                    android:id="@+id/layout_list_lottery_record_tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_50"
                    android:text="查看详情"
                    android:textSize="12sp"
                    android:textColor="@color/advert_blue_text" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/d_line" />

    <RelativeLayout
        android:id="@+id/layout_list_lottery_record_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90">

        <RelativeLayout
            android:id="@+id/layout_list_lottery_record_rl_will"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/px_90" >

            <com.goodhappiness.widget.PercentageBar
                android:id="@+id/layout_list_lottery_record_pb"
                android:layout_width="@dimen/px_400"
                android:layout_height="@dimen/px_15"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_19" />

            <RelativeLayout
                android:layout_width="@dimen/px_400"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_list_lottery_record_pb"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_8">

                <TextView
                    android:id="@+id/layout_list_lottery_detail_tv_exsitingTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总需1555人"
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/surplus"
                        android:textColor="@color/gray_666_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/layout_list_lottery_detail_tv_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_5"
                        android:layout_marginRight="@dimen/px_5"
                        android:text="51"
                        android:textColor="@color/advert_blue_text"
                        android:textSize="12sp" />
                    <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textColor="@color/gray_666_text"
                        android:textSize="12sp" />-->
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/layout_list_lottery_record_tv_will_buy"
                android:layout_width="@dimen/px_130"
                android:layout_height="@dimen/px_50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:background="@drawable/shape_for_theme_btn"
                android:gravity="center"
                android:text="@string/add_add" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_list_lottery_record_rl_ing"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/px_90">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_20">

                <ImageView
                    android:layout_width="@dimen/px_30"
                    android:layout_height="@dimen/px_30"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ico_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/revealed_soon"
                    android:textColor="@color/join_red"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_15"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wait_counting"
                    android:textColor="@color/join_red"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_list_lottery_record_tv_ing_buy"
                android:layout_width="@dimen/px_130"
                android:layout_height="@dimen/px_50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:background="@drawable/shape_for_search"
                android:gravity="center"
                android:text="@string/buy_again" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_list_lottery_record_rl_revealed"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winner_"
                    android:textColor="@color/gray_999_text"
                    android:textSize="14sp" />

                <com.goodhappiness.widget.emoji.EmojiTextView
                    app:emojiSize="20sp"
                    android:id="@+id/layout_list_lottery_record_tv_winner"
                    android:layout_width="@dimen/px_200"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/advert_blue_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/layout_list_lottery_record_tv_revealed_buy"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/layout_list_lottery_record_tv_win_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="@color/join_red"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_5"
                    android:text="@string/people_count"
                    android:textColor="@color/gray_999_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/layout_list_lottery_record_tv_revealed_buy"
                android:layout_width="@dimen/px_130"
                android:layout_height="@dimen/px_50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:background="@drawable/shape_for_search"
                android:gravity="center"
                android:text="@string/buy_again" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/e_bg"
        android:layout_height="@dimen/px_20"/>
</LinearLayout>