<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="@dimen/px_550"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/px_810">
        <ImageView
            android:src="@mipmap/bg_col"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/px_430"
            android:layout_height="@dimen/px_340" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/dialog_push_winner_gif"
            android:src="@mipmap/loading_default"
            android:layout_width="@dimen/px_550"
            android:layout_height="@dimen/px_500" />
        <LinearLayout
            android:layout_marginTop="@dimen/px_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_push_winner_gif"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="成功获得"
                    android:textSize="19sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dialog_push_winner_tv_name"
                    android:layout_width="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/dialog_push_winner_iv_use"
                android:src="@mipmap/btn_sy"
                android:layout_marginTop="@dimen/px_25"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_80" />
            <TextView
                android:id="@+id/dialog_push_winner_tv_go_detail"
                android:layout_marginTop="@dimen/px_25"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_666_text"
                android:text="查 看 夺 券 记 录 >"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/dialog_push_winner_iv_close"
            android:layout_alignParentRight="true"
            android:src="@mipmap/push_close"
            android:padding="@dimen/px_15"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80" />
    </RelativeLayout>
</RelativeLayout>