<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/px_25"
        android:layout_marginBottom="@dimen/px_25"
        android:layout_marginLeft="@dimen/px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="共" />

        <TextView
            android:id="@+id/layout_stretch_submit_order_head_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_5"
            android:textSize="12sp"
            android:text="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="件商品" />

    </LinearLayout>

    <ImageView
        android:id="@+id/layout_stretch_submit_order_head_iv_arrow"
        android:layout_width="@dimen/px_20"
        android:layout_height="@dimen/px_20"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:src="@mipmap/btn_main_down"
        />
</RelativeLayout>