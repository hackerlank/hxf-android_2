<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/title_bar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:text="@string/set_pwd_" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/shape_for_black">

            <EditText
                android:id="@+id/register_three_cet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/px_15"
                android:layout_marginBottom="@dimen/px_5"
                android:layout_marginRight="@dimen/px_50"
                android:layout_marginTop="@dimen/px_5"
                android:background="@color/white"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                android:hint="@string/pwd_limit"
                android:inputType="textPassword"
                android:textColorHint="@color/gray_999_text" />

            <ImageView
                android:id="@+id/register_three_iv_yee"
                android:layout_width="@dimen/px_54"
                android:layout_height="@dimen/px_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_20"
                android:padding="@dimen/px_5"
                android:src="@mipmap/ico_hide" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/register_three_ll_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="@string/confirm_new_msg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_30"
                android:background="@drawable/shape_for_black">

                <EditText
                    android:id="@+id/register_three_cet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/px_15"
                    android:layout_marginBottom="@dimen/px_5"
                    android:layout_marginRight="@dimen/px_50"
                    android:layout_marginTop="@dimen/px_5"
                    android:background="@color/white"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                    android:hint="@string/pwd_limit"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray_999_text" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/register_three_tv_over"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/shape_for_theme_btn"
            android:gravity="center"
            android:text="@string/finish_register" />
    </LinearLayout>
</RelativeLayout>