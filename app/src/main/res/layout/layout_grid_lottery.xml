<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:paddingBottom="@dimen/px_10"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/layout_list_lottery_iv_coupon_grid"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_mrjz"
            android:layout_margin="@dimen/px_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/layout_list_lottery_tv_name"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout_list_lottery_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px_5"
                    android:textColor="@color/gray_666_text"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/layout_list_lottery_tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98%"
                    android:textColor="@color/gray_666_text"
                    android:textSize="12sp" />

                <com.goodhappiness.widget.PercentageBar
                    android:id="@+id/layout_list_lottery_pb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_15"
                    android:layout_marginTop="@dimen/px_5"
                    android:background="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_list_lottery_tv_add"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/px_15"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_for_join_to_list"
                android:focusable="false"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/px_12"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_12"
                android:text="@string/join_immediately"
                android:textColor="@color/black_333_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>