<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_social_tv_focus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_color"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/px_100"
                android:text="@string/focus"
                android:textColor="@color/black_333_text" />

            <TextView
                android:id="@+id/fragment_social_tv_world"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_color"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/px_100"
                android:text="@string/world"
                android:textColor="@color/black_333_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_social_v_line1"
                android:layout_width="@dimen/px_200"
                android:layout_height="match_parent"
                android:background="@color/black_333_text" />
        </LinearLayout>
        <ImageView
            android:id="@+id/fragment_social_search"
            android:layout_width="@dimen/px_69"
            android:layout_height="@dimen/px_54"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:padding="@dimen/px_10"
            android:src="@mipmap/ico_search" />
        <ImageView
            android:id="@+id/fragment_social_camera"
            android:layout_width="@dimen/px_69"
            android:layout_height="@dimen/px_54"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:padding="@dimen/px_10"
            android:src="@mipmap/ico_publish" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_social_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_80"
        android:fitsSystemWindows="true" />

</RelativeLayout>