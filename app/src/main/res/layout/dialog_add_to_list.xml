<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@color/e_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_15"
            android:textColor="@color/black_333_text"
            android:text="@string/period_choose" />

        <ImageView
            android:id="@+id/dialog_add_to_list_iv_cancel"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_35"
            android:src="@mipmap/ico_btn_click" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/px_15"
        android:textColor="@color/black_333_text"
        android:text="@string/join_count" />
    <RelativeLayout
        android:layout_width="@dimen/px_400"
        android:layout_height="@dimen/px_100"
        android:background="@drawable/shape_for_search"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/dialog_add_to_list_iv_reduce"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:padding="@dimen/px_30"
            android:src="@mipmap/ico_btn_reduce"/>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#999"
            android:layout_marginLeft="@dimen/px_100"/>
        <EditText
            android:id="@+id/dialog_add_to_list_cet"
            android:layout_centerInParent="true"
            android:inputType="number"
            android:textColor="@color/join_red"
            android:text="1"
            android:background="@color/white"
            android:layout_width="@dimen/px_180"
            android:singleLine="true"
            android:textSize="18sp"
            android:maxLength="8"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#999"
            android:layout_marginRight="@dimen/px_100"/>
        <ImageView
            android:id="@+id/dialog_add_to_list_iv_add"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_alignParentRight="true"
            android:padding="@dimen/px_30"
            android:src="@mipmap/ico_btn_add"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/dialog_add_to_list_gv_count"
        android:layout_margin="@dimen/px_40"
        android:numColumns="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"/>
    <TextView
        android:id="@+id/dialog_add_to_list_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_110"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="@string/add_to_inventory" />
</LinearLayout>