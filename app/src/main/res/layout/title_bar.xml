<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/common_rl_head"
    android:layout_height="@dimen/px_80"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_color" >

    <ImageView
        android:id="@+id/common_left"
        android:layout_width="@dimen/px_260"
        android:layout_height="@dimen/px_80"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/back"
        android:paddingBottom="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_198"
        android:paddingTop="@dimen/px_20"
        android:visibility="visible"
         />
	 <ImageView
        android:id="@+id/common_mid"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_centerVertical="true"
        android:padding="@dimen/px_10"
        android:layout_toLeftOf="@+id/common_title"
        android:src="@mipmap/loading"
         android:visibility="invisible" />
    <com.goodhappiness.widget.emoji.EmojiTextView
        app:emojiSize="20sp"
        android:id="@+id/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:layout_margin="@dimen/px_5"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/common_right"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_30"
        android:padding="@dimen/px_10"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/common_right_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_20"
        android:gravity="right"
        android:textColor="@color/black" />

</RelativeLayout>