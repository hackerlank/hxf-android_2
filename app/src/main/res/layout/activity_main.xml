<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_measure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"/>
    <View
        android:id="@+id/v_measure_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="@dimen/px_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_lottery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_lottery_normal"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab1_footer"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_lottery_press"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab1_footer_click"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_revelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_revelation_normal"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab2_footer"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_revelation_press"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab2_footer_click"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_friends_normal"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/tabbar_n_3"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_friends_press"
                        android:layout_width="@dimen/px_50"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/tabbar_s_3"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_shop_normal"
                        android:layout_width="@dimen/px_41"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab4_footer"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_shop_press"
                        android:layout_width="@dimen/px_41"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab4_footer_click"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_me_normal"
                        android:layout_width="@dimen/px_31"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab5_footer"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_me_press"
                        android:layout_width="@dimen/px_31"
                        android:layout_height="@dimen/px_50"
                        android:background="@mipmap/ico_tab5_footer_click"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/px_5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_tv_lottery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_message_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lottery_title"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_message_text_press"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="@string/lottery_title"
                    android:textColor="@color/black_333_text"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tv_revelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_contacts_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/least_revelation"
                    android:textColor="@color/black_333_text"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_contacts_text_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/least_revelation"
                    android:textColor="@color/black_333_text"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_discovery_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friends"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_discovery_text_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/friends"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_shop_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="@string/happiness_shop"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_shop_text_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happiness_shop"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_me_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_me_text_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <com.goodhappiness.widget.NoScrollDisPatchViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:fitsSystemWindows="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/ll_bottom"
        android:background="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_110"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <View
            android:id="@+id/main_v_lottery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/main_v_reveal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/main_v_friends"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/main_iv_normal"
                android:layout_width="match_parent"
                android:src="@mipmap/ico_shej"
                android:visibility="gone"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="match_parent"
                android:src="@mipmap/ico_shej"
                android:visibility="gone"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/main_iv_press"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:src="@mipmap/ico_shej_click"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <View
            android:id="@+id/main_v_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/main_v_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/notice"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20"
                android:background="@drawable/shape_red_point"
                android:textColor="#fff"
                android:visibility="gone"
                android:layout_marginTop="@dimen/px_25"
                android:layout_marginRight="@dimen/px_35"
                android:layout_alignParentRight="true"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
