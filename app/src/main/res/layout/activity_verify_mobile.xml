<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_100"
                android:layout_marginLeft="@dimen/px_20"
                android:gravity="center_vertical"
                android:text="@string/mobile_num"
                android:textColor="@color/gray_666_text"
                android:textSize="14sp" />

            <com.goodhappiness.widget.ClearEditText
                android:id="@+id/verify_mobile_et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:inputType="number"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/please_input_phone_num"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/black_333_text"
                android:textColorHighlight="@color/gray_666_text"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/d_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100">

            <com.goodhappiness.widget.ClearEditText
                android:id="@+id/verify_mobile_et_mac"
                android:layout_width="@dimen/px_400"
                android:layout_height="@dimen/px_100"
                android:background="@color/white"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="@string/please_input_mac"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/black_333_text"
                android:textColorHighlight="@color/gray_666_text"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/verify_mobile_tv_get_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:text="@string/get_mac"
                android:textSize="16sp"
                android:background="@drawable/shape_for_theme_btn"
                android:paddingLeft="@dimen/px_15"
                android:paddingRight="@dimen/px_15"
                android:paddingTop="@dimen/px_10"
                android:paddingBottom="@dimen/px_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/d_line" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/px_30"
            android:id="@+id/verify_mobile_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_30"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:background="@drawable/shape_for_theme_btn"
            android:paddingLeft="@dimen/px_15"
            android:paddingRight="@dimen/px_15"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>